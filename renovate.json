{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe",
    ":approveMajorUpdates",
    ":automergeMinor",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    ":timezone(Europe/Berlin)",
    ":rebaseStalePrs"
  ],
  "baseBranches": ["main"],
  "minimumReleaseAge": "3 days",
  "rollbackPrs": true,
  "automergeStrategy": "squash",
  "reviewers": ["@lapotor", "@whyauthentic"]
}
